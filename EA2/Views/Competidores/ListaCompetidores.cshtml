@model List<Entidades.Competidor>
@{
    ViewBag.Title = "ListaCompetidores";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<div class="container col-md-8">
    <h2 class="text-white text-center">Listado de Competidores</h2>
    @Html.ActionLink("Crear nuevo Competidor", "AltaCompetidor", "Competidores", new { @class = "btn btn-primary" })
    @if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            No se encontraron Competidores registrados
        </div>
    }
    else
    {
        <div class="card">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (Entidades.Competidor competidor in Model)
                    {
                        <tr>
                            <th scope="row">@competidor.Id</th>
                            <td>@competidor.Nombre</td>

                        </tr>

                    }

                </tbody>

            </table>
        </div>
    }
</div>

