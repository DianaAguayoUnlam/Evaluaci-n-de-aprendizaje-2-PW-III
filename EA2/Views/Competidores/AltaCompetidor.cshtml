@model Entidades.Competidor
@{
    ViewBag.Title = "AltaCompetidor";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<h2 class="text-white text-center">Alta nuevo Competidor</h2>
<div class="container col-md-6 card">
    @using ((Html.BeginForm("AltaCompetidor", "Competidores", FormMethod.Post)))
    {
        <div class="form-group">
            <label>Nombre:</label>
            @Html.EditorFor(competidor => competidor.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese nombre" } })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    }

</div>


